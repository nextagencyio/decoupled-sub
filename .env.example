# Decoupled.io Drupal Backend
DRUPAL_BASE_URL=https://your-space.decoupled.website
DRUPAL_CLIENT_ID=your-client-id
DRUPAL_CLIENT_SECRET=your-client-secret

# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Stripe Webhook Secret (for local testing, use stripe listen --forward-to localhost:3000/api/webhooks/stripe)
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price ID (create a product in Stripe Dashboard and copy the price ID)
STRIPE_PRICE_ID=price_...

# Optional: Site URL for callbacks
NEXT_PUBLIC_SITE_URL=http://localhost:3000
